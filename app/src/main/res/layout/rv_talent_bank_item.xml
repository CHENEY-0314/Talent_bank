                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="演讲能力"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="Photoshop"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="PPT制作"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="C++"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="JAVA"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="微信小程序开发"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="Android开发"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="IOS开发"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>


            </com.google.android.flexbox.FlexboxLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff8f8f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="简历"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="#fff8f8f8" />

                <TextView
                    android:id="@+id/rv_talent_bank_touch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="沟通"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>