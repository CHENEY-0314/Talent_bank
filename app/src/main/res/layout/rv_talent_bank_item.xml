<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:layout_marginTop="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/user_image" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/item_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="#2D2835"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/item_user_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2018级/软件工程"
                        android:textColor="#2D2835"
                        android:textSize="12sp"/>

                </LinearLayout>


            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/talent_bank_tag_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                app:flexWrap="wrap">

                <TextView
                    android:id="@+id/talent_bank_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="包装设计"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="平面设计"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="UI设计"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="产品设计"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="英语"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="其他外语"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/talent_bank_lable"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="视频剪辑"
                    android:textColor="#1161E4"
                    android:textSize="15sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/talent_bank_tag8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
