<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/EMB_head"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/EMBimg_back"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/signupback"
            android:background="@drawable/back" />
        <TextView
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="58dp"
            android:textColor="@color/titlecolor"
            android:text="编辑我的简历"
            android:paddingStart="10dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:gravity="bottom"
        android:layout_weight="0.15"
        android:orientation="vertical"
        android:paddingStart="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:contentDescription="back"
            app:srcCompat="@drawable/mountain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑属于你的个人简历"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/homeContent"
        android:clipToPadding="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:background="@drawable/register_cardview"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="个人优势"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/EMB_edt_adantage"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:autofillHints=""
                        android:gravity="start"
                        android:hint="填写您的意向、优点、特长等"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="3dp"
                        android:maxLength="150"
                        android:textColor="#000"
                        android:textColorHint="#CBCBCB"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/EMB_textAdvantage_Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/150"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:textColor="#B1B0B0"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:background="@drawable/register_cardview"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="项目经验"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/EMB_edt_experience"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:autofillHints=""
                        android:gravity="start"
                        android:hint="填写您的过往项目经历、团队定位等"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="3dp"
                        android:maxLength="150"
                        android:textColor="#000"
                        android:textColorHint="#CBCBCB"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/EMB_textExperience_Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/150"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:textColor="#B1B0B0"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:background="@drawable/register_cardview"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:text="综合能力标签"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（ 多选 ）"
                            android:textColor="#CBCBCB"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        app:flexWrap="wrap">

                        <CheckBox
                            android:id="@+id/EMBcb_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="包装设计"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="平面设计"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="UI设计"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="产品设计"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="英语"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="其他外语"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="视频剪辑"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="演讲能力"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="Photoshop"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="PPT制作"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="C++"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="JAVA"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="微信小程序开发"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="Android开发"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/EMBcb_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="IOS开发"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/EMBtextGrade"
                    android:paddingTop="30dp"
                    android:paddingStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/QQ"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:paddingTop="25dp"
                    android:textColor="#FF0000"
                    android:paddingLeft="8dp"
                    android:layout_toEndOf="@+id/EMBtextGrade"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/EMBeditGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="如：2018级/软件工程"
                android:maxLength="15"
                android:textSize="16sp"
                tools:ignore="LabelFor"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/EMBtextWechart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Wechart"
                android:paddingStart="5dp"
                android:paddingTop="38dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EMBeditWechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:hint="如：5201314(QQ)"
                android:inputType="text"
                android:maxLength="25"
                android:textSize="16sp"
                tools:ignore="LabelFor"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/EMBtextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email"
                android:paddingStart="5dp"
                android:paddingTop="38dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/EMBeditEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="20"
                android:textSize="16sp"
                tools:ignore="LabelFor,TextFields"
                tools:layout_editor_absoluteX="20dp" />


            <TextView
                android:id="@+id/EMBtextAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adress"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:textColor="#000"
                android:paddingTop="38dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EMBeditAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="50"
                android:inputType="text"
                android:textSize="16sp"
                android:hint="如：华南理工大学大学城校区"
                tools:ignore="LabelFor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州番禺区大学城内"
                android:textSize="13sp"
                android:textColor="#CDCDCD"/>


            <Button
                android:id="@+id/EMBbtn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/signup_btnshape"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:stateListAnimator="@null"
                android:text="完成"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
