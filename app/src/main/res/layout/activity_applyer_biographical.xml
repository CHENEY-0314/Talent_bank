                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="JAVA"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/ARB_cb_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:checked="true"
                            android:visibility="gone"
                            android:clickable="false"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="微信小程序开发"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/ARB_cb_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:checked="true"
                            android:visibility="gone"
                            android:clickable="false"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="Android开发"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/ARB_cb_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/register_choose"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="IOS开发"
                            android:textColor="#fff"
                            android:checked="true"
                            android:visibility="gone"
                            android:clickable="false"
                            android:textSize="15sp" />
                    </com.google.android.flexbox.FlexboxLayout>


                </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:text="联系信息"
                android:paddingStart="5dp"
                android:paddingVertical="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="8dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/QQ"
                android:layout_marginStart="6dp"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/ARB_text_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="这是Ta的年级与专业"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="6dp"
                android:layout_height="0.2dp"
                android:background="#A1A1A1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="联系方式"
                android:paddingTop="35dp"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/ARB_text_wechart"
                android:layout_width="match_parent"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="未填写联系方式"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="0.2dp"
                android:layout_marginStart="6dp"
                android:background="#A1A1A1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:paddingTop="35dp"
                android:layout_marginStart="6dp"
