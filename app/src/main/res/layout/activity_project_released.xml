<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_background"
    tools:context=".ProjectReleased">
    <LinearLayout
        android:id="@+id/pr_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:gravity="bottom"
        tools:ignore="RtlSymmetry,UseCompoundDrawables"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pr_back"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@drawable/back"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="58dp"
            android:textColor="#1C1C1F"
            android:text="项目发布"
            android:paddingStart="10dp"
            android:textSize="20sp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="比赛名称"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingTop="30dp"
                android:textColor="#686868"/>
            <EditText
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比赛名称讲作为“话题”发表"
                android:textSize="13sp"
                android:textColor="#CDCDCD"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="职位与人数要求"
                android:textSize="17sp"
                android:textColor="#686868"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/project_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不同需求用“、”隔开"
                android:textSize="13sp"
                android:textColor="#CDCDCD"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="奖励/补偿机制"
                android:textSize="17sp"
                android:textColor="#686868"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="17sp"
                android:textColor="#686868"
                android:textStyle="bold"
                android:layout_marginTop="40dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:importantForAutofill="no"/>
            <Button
                android:id="@+id/pr_released"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp"
                android:stateListAnimator="@null"
                android:background="@drawable/signup_btnshape"
                android:bufferType="normal"
                android:text="发布"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingVertical="15dp"
                android:layout_marginTop="40dp"/>

         </LinearLayout>
    </ScrollView>


</LinearLayout>