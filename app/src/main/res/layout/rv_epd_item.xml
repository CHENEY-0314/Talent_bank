<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/project_img_num"/>

                <TextView
                    android:id="@+id/rv_epd_member_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="队友职务"
                    android:textSize="16sp"
                    android:textColor="#403B49"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#E8E8E8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="队友能力标签"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:flexWrap="wrap">

                <CheckBox
                    android:id="@+id/rv_epd_cb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="包装设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="平面设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:enabled="false"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="UI设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:enabled="false"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="产品设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="英语"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="其他外语"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="视频剪辑"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/rv_epd_cb_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="演讲能力"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Photoshop"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="PPT制作"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="C++"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="JAVA"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="微信小程序开发"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Android开发"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/rv_epd_cb_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="IOS开发"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他要求"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rv_epd_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=""
                android:textColor="#403B49"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>