<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectContents">

    <LinearLayout
        android:id="@+id/PChead"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:gravity="bottom"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <ImageView
            android:id="@+id/PCimg_back"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/signupback"
            android:background="@drawable/back"/>
        <TextView
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#1C1C1F"
            android:text="项目详情"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/PCimg_more"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_more_horiz_black_24dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:padding="30dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/project_photp1" />

            <TextView
                android:id="@+id/PC_pj_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目名称"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/PC_pj_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#项目介绍#"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#7C7C7C"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="23dp"
                            android:background="@drawable/project_img_num"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/PC_num"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:text="参与人数：0 人"
                            android:textColor="#000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_marginHorizontal="23dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#E8E8E8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="23dp"
                            android:background="@drawable/project_img_demand"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:text="队友要求"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/PC_btn_demand"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:background="@drawable/login_btnshape"
                            android:backgroundTint="#1161E4"
                            android:bufferType="normal"
                            android:stateListAnimator="@null"
                            android:text="查看详情"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_marginHorizontal="23dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#E8E8E8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="23dp"
                            android:background="@drawable/project_img_content"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:text="申请情况"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/PC_btn_apply"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:background="@drawable/login_btnshape"
                            android:backgroundTint="#1161E4"
                            android:bufferType="normal"
                            android:stateListAnimator="@null"
                            android:text="查看详情"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/PC_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btnshape"
                android:backgroundTint="#fff"
                android:bufferType="normal"
                android:stateListAnimator="@null"
                android:text="进入人才库"
                android:textStyle="bold"
                android:textColor="#1161E4"
                android:textSize="18sp"
                android:layout_marginTop="30dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>