<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCollectionActivity">
    <LinearLayout
        android:id="@+id/EPNhead"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:gravity="bottom"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <ImageView
            android:id="@+id/EPNimg_back"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:contentDescription="@string/signupback"
            android:background="@drawable/back"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="58dp"
            android:textColor="#1C1C1F"
            android:text="编辑人数"
            android:paddingStart="10dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="28dp"
        android:paddingTop="35dp"
        android:paddingRight="28dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目队伍需求人数上限"
                    android:textSize="18sp"
                    android:textColor="#4E4956"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="28dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/ED_btn1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1161E4"
                       android:text="-"
                        android:textColor="#fff"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/ED_num"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="#1161E4"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/ED_btn2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1161E4"
                        android:text="+"
                        android:textColor="#fff"
                        android:textSize="17sp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>