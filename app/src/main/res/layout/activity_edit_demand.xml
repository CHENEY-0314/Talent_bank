<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_fragment.SetUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:gravity="bottom"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <ImageView
            android:id="@+id/EDimg_back"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:contentDescription="@string/signupback"
            android:background="@drawable/back"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="58dp"
            android:textColor="#1C1C1F"
            android:text="队友要求"
            android:paddingStart="10dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:focusableInTouchMode="true"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="38dp"
        android:paddingRight="30dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingTop="22dp"
                android:paddingRight="28dp"
                android:paddingBottom="15dp">

                <EditText
                    android:id="@+id/ED_edit"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:background="#fff"
                    android:gravity="start"
                    android:hint="待编写队友要求"
                    android:inputType="textMultiLine|textPhonetic"
                    android:maxLength="100"
                    android:textColor="#403B49"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100字以内"
                    android:textColor="#DBD6E4"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/ED_save"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btnshape"
            android:backgroundTint="#1160E2"
            android:bufferType="normal"
            android:stateListAnimator="@null"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>