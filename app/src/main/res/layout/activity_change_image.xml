<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_fragment.ChangeImageActivity">

    <LinearLayout
        android:id="@+id/CM_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:paddingTop="25dp"
        android:paddingStart="30dp"
        android:background="#fff"
        android:gravity="center"
        tools:ignore="RtlSymmetry,UseCompoundDrawables">
        <ImageView
            android:id="@+id/CM_back"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:contentDescription="@string/signupback"
            android:background="@drawable/back"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="58dp"
            android:textColor="#1C1C1F"
            android:text="更换头像"
            android:paddingStart="10dp"
            android:textSize="20sp" />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.88"
            android:orientation="vertical"
            android:gravity="center"
            android:focusableInTouchMode="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CM_img_user"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                app:civ_border_width="5dp"
                app:civ_border_overlay="true"
                app:civ_border_color="@color/colorPrimary"
                app:civ_fill_color="#fff"
                android:src="@drawable/user_image" />

            <Button
                android:id="@+id/CM_btn_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册上传"
                android:bufferType="normal"
                android:stateListAnimator="@null"
                android:background="@drawable/login_btnshape"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="50dp"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/CM_btn_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照上传"
                android:background="@drawable/login_btnshape"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#fff"
                android:bufferType="normal"
                android:stateListAnimator="@null"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="12dp"
                android:layout_marginBottom="95dp"
                android:textSize="18sp"/>

        </LinearLayout>

</LinearLayout>