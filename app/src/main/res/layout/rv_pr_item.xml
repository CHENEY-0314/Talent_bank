<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/project_img_num"/>

                <EditText
                    android:id="@+id/pr_member_title"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:hint="填写队友职务(必填)"
                    android:maxLength="20"
                    android:textSize="13sp"
                    android:background="#fff"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#E8E8E8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="队友能力标签"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（ 多选 ）"
                    android:textColor="#CBCBCB"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:flexWrap="wrap">

                <CheckBox
                    android:id="@+id/prcb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="包装设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="平面设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="UI设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="产品设计"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="英语"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="其他外语"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="视频剪辑"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/prcb_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="演讲能力"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Photoshop"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="PPT制作"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="C++"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="JAVA"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="微信小程序开发"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Android开发"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/prcb_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/register_choose"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="IOS开发"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他要求"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pr_item_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#fff"
                android:gravity="start"
                android:hint="点击编辑队友要求（如需要几个此类型的队友）（若无请写无）"
                android:inputType="textMultiLine|textPhonetic"
                android:maxLength="100"
                android:textColor="#403B49"
                android:textSize="13sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/rv_pr_btnsava"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="SAVE"
                android:textColor="#fff"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@drawable/btn_saveshcange"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>