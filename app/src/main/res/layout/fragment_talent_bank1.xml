<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".TalentBank.TalentBankFragment1">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.flexbox.FlexboxLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="20dp"
        app:flexWrap="wrap">
        <CheckBox
            android:id="@+id/talent_bank_cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/talent_bank_check"
            android:button="@null"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="包装设计"
            android:textColor="#000"
            android:textSize="13sp" />
        <CheckBox
            android:id="@+id/talent_bank_cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/talent_bank_check"
            android:button="@null"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="平面设计"
            android:textColor="#000"
            android:textSize="13sp" />
        <CheckBox
            android:id="@+id/talent_bank_cb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/talent_bank_check"
            android:button="@null"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="UI设计"
            android:textColor="#000"
            android:textSize="13sp" />
        <CheckBox
            android:id="@+id/talent_bank_cb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/talent_bank_check"
            android:button="@null"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="产品设计"
            android:textColor="#000"
            android:textSize="13sp" />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>