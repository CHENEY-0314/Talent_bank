<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_person_black_24dp"/>

                <TextView
                    android:id="@+id/epd_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#fff"
                    android:text="软件开发"
                    android:textColor="#403B49"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#E8E8E8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="队友能力标签"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/epd_item_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:ellipsize="end"
                android:gravity="start"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="包装设计、平面设计、PPT制作"
                android:textColor="#403B49"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注详情"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/epd_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="start"
                android:lineSpacingExtra="3dp"
                android:textColor="#403B49"
                android:textSize="16sp"
                android:ellipsize="end"
                android:text="具体要求：能完成简单Android开发工作；有参加类似比赛经验者优先。负责认真，乐观开朗。暂找2人。"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/pd_item_apply"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:text="申请"
                android:layout_gravity="right"
                android:background="@drawable/login_btnshape"
                android:backgroundTint="#1161E4"
                android:bufferType="normal"
                android:stateListAnimator="@null"
                android:textColor="#fff"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>